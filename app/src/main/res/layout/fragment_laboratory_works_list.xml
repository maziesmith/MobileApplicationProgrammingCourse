<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mtuci.nikitakutselay.mobileapplicationprogrammingcourse.LaboratoryWorksListFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/lab1Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lab1_name" />

        <Button
            android:id="@+id/lab2Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lab2_name" />

        <Button
            android:id="@+id/lab3Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lab3_name" />

        <Button
            android:id="@+id/lab4Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lab4_name" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
